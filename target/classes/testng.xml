<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="FirstTestSuite" parallel="tests" verbose="2">
    <listeners>
        <listener class-name="com.dice.base.TestListener">
        </listener>
    </listeners>

    <test name="LogInTest-GC">
        <parameter name="browser"  value="chrome"/>
        <groups>
            <run>
                <exclude name="broken"></exclude>
            </run>
        </groups>
        <classes>
            <class name="com.dice.LogInTest">

            </class>
        </classes>
    </test>

    <test name="LogInTest - FF">
        <parameter name="browser"  value="firefox"/>
        <groups>
            <run>
                <exclude name="negative"></exclude>
                <exclude name="broken"></exclude>
            </run>
        </groups>
        <classes>
            <class name="com.dice.LogInTest">
                        </class>
        </classes>
    </test>

</suite>
